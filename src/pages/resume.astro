---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ResumeSection from '../components/ResumeSection.astro';
---

<Layout title="Resume | Aidan O'Neil">

  <main class="max-w-3xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-gruvbox-fg mb-8">Resume</h1>

    <div class="bg-gruvbox-bg1 rounded-lg shadow-xl p-8">
      <!-- Education Section -->
      <ResumeSection
        title="Education"
        items={[
          {
            title: "Rose-Hulman Institute of Technology",
            subtitle: "B.S. Mathematics & Data Science, Minor in Economics",
            period: "2022 - 2026",
            description: "Relevant coursework: Abstract Algebra, Database Systems, Linear Algebra, Artificial Intelligence, Data Mining. Extracurriculars: Phi Gamma Delta Member, Shakespeare Club Treasurer."
          }
        ]}
      />

      <!-- Experience Section -->
      <ResumeSection
        title="Experience"
        items={[
          {
            title: "Summer Games Intern",
            subtitle: "Booz Allen Hamilton",
            period: "June 2025 - Present",
            description: "Applying data science techniques to support public sector challenges through collaborative projects and technical expertise."
          },
          {
            title: "AskRose Supervisor & Math Department Grader",
            subtitle: "Rose-Hulman Institute of Technology",
            period: "Aug 2022 - Present",
            description: "Provided STEM tutoring, led a team of tutors, graded Calculus and Linear Algebra assignments, and improved grading consistency."
          },
          {
            title: "Co-Founder & Director of Operations",
            subtitle: "O'Neil and Yuan Advisory",
            period: "Apr 2023 - Dec 2024",
            description: "Led a data science consulting firm delivering process optimization and cloud-based data solutions to SMBs."
          }
        ]}
      />

      <!-- Projects Section -->
      <ResumeSection
        title="Selected Projects"
        items={[
          {
            title: "Wholesale Distribution Forecasting & Pricing Analytics",
            subtitle: "AWS (S3, Lambda, SageMaker), pandas, Prophet",
            period: "Jan 2024 - Nov 2024",
            description: "Developed an end-to-end inventory forecasting solution, leveraging ML models for 95% forecast accuracy."
          },
          {
            title: "Meals on Wheels Data & Analytics Transformation",
            subtitle: "AWS (Glue, Lambda), pandas, Tableau",
            period: "Feb 2024 - Aug 2024",
            description: "Designed an AWS-based data platform to optimize food production and delivery through data consolidation and automation."
          },
          {
            title: "Fraud Detection in Airbnb Listings",
            subtitle: "R, XGBoost",
            period: "May 2023 - Aug 2023",
            description: "Built an XGBoost-based model for detecting fraudulent Airbnb listings, improving platform security."
          }
        ]}
      />

      <!-- Skills Section -->
      <ResumeSection
        title="Skills"
        items={[
          {
            title: "Programming",
            description: "Python, R, SQL, JavaScript, MATLAB"
          },
          {
            title: "Data Science",
            description: "Machine Learning, Statistical Modeling, Data Visualization, Time Series Analysis"
          },
          {
            title: "Tools & Frameworks",
            description: "TensorFlow, PyTorch, pandas, scikit-learn, AWS, Tableau"
          }
        ]}
      />

      <!-- Download Resume Button -->
      <div class="mt-8 text-center">
        <a
          href="/resume.pdf"
          target="_blank"
          class="inline-block px-6 py-3 bg-gruvbox-bg2 hover:bg-gruvbox-bg3 rounded-md transition-colors text-gruvbox-fg"
        >
          Download Full Resume
        </a>
      </div>
    </div>
  </main>

</Layout>
