<style>
  .timeline-container {
    position: relative;
    width: 100%;
  }

  .timeline-item {
    padding: 1rem 0;
    position: relative;
    width: 50%;
    box-sizing: border-box;
  }

  .timeline-item.left {
    left: 0;
    padding-right: 2.5rem;
  }

  .timeline-item.right {
    left: 50%;
    padding-left: 2.5rem;
  }

  .timeline-item .content {
    background: var(--gruvbox-bg2);
    padding: 1.5rem;
    border-radius: 0.5rem;
    position: relative;
  }

  .timeline-item.left .content:after {
    content: '';
    position: absolute;
    right: -0.75rem;
    top: 1.5rem;
    width: 1.5rem;
    height: 1.5rem;
    background: var(--gruvbox-bg3);
    border-radius: 50%;
    border: 0.25rem solid var(--gruvbox-aqua);
  }

  .timeline-item.right .content:after {
    content: '';
    position: absolute;
    left: -0.75rem;
    top: 1.5rem;
    width: 1.5rem;
    height: 1.5rem;
    background: var(--gruvbox-bg3);
    border-radius: 50%;
    border: 0.25rem solid var(--gruvbox-orange);
  }

  .date {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--gruvbox-bg0);
    border-radius: 1rem;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .skill-tag {
    display: inline-block;
    background: var(--gruvbox-bg0);
    border-radius: 2rem;
    margin-bottom: 0.5rem;
    padding: 0.5rem 0.9rem;  /* Increased padding for better spacing */
    border-radius: 0.375rem;
    font-size: 1rem;  /* Increased from 0.875rem */
    font-weight: 600;  /* Made slightly bolder */
    letter-spacing: 0.01em;  /* Slight letter spacing for readability */
    transition: all 0.2s;
    color: #ebdbb2;  /* Light text color for contrast against dark background */
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);  /* Subtle text shadow for depth */
  }

  .skill-tag:hover {
    transform: translateY(-2px);
  }

  .contact-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    background: var(--gruvbox-bg2);
    border-radius: 0.5rem;
    transition: transform 0.2s, background-color 0.2s;
  }

  .contact-link:hover {
    transform: translateY(-2px);
    background: var(--gruvbox-bg3);
  }

  /* Media query for mobile */
  @media (max-width: 768px) {
    .timeline-item {
      width: 100%;
      left: 0;
      padding-left: 2.5rem;
    }

    .timeline-item.left, .timeline-item.right {
      left: 0;
      padding-left: 2.5rem;
      padding-right: 1rem;
    }

    .timeline-item.left .content:after, .timeline-item.right .content:after {
      left: -0.75rem;
      right: auto;
    }

    /* Move vertical line to left */
    .relative .absolute {
      left: 0;
      transform: none;
    }
  }
</style>
