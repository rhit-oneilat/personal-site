---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ResumeSection from '../components/ResumeSection.astro';
---

<Layout title="Resume | Aidan O'Neil">

  <main class="max-w-16xl mx-auto px-8 py-16">
    <h1 class="text-6xl font-bold text-gruvbox-orange mb-12 text-center">Resume</h1>

    <div class="bg-gruvbox-bg1 rounded-lg shadow-2xl p-12 text-lg">
      <!-- Education Section -->
      <ResumeSection
        title="Education"
items={[
          {
            title: "Rose-Hulman Institute of Technology",
            subtitle: "B.S. Mathematics & Data Science, Minor in Economics",
            period: "2022 - 2026",
            description: "Relevant coursework: Abstract Algebra, Database Systems, Linear Algebra, Artificial Intelligence, Data Mining. Extracurriculars: Phi Gamma Delta Member, Shakespeare Club Treasurer."
          }
]}
      />

      <!-- Experience Section -->
      <ResumeSection
        title="Experience"
items={[
          {
            title: "Summer Games Intern",
            subtitle: "Booz Allen Hamilton",
            period: "June 2025 - Present",
            description: "Applying data science techniques to support public sector challenges through collaborative projects and technical expertise."
          },
          {
            title: "AskRose Supervisor & Math Department Grader",
            subtitle: "Rose-Hulman Institute of Technology",
            period: "Aug 2022 - Present",
            description: "Provided STEM tutoring, led a team of tutors, graded Calculus and Linear Algebra assignments, and improved grading consistency."
          },
          {
            title: "Co-Founder & Director of Operations",
            subtitle: "O'Neil and Yuan Advisory",
            period: "Apr 2023 - Dec 2024",
            description: "Led a data science consulting firm delivering process optimization and cloud-based data solutions to SMBs."
          }
]}
      />

      <!-- Skills Section -->
      <ResumeSection
          title="Skills"
items={[
            {
              title: "Programming Languages",
              description: "Python, R, SQL, Java, HTML/CSS"
            },
            {
              title: "Development Tools",
              description: "AWS (S3, Lambda, SageMaker, Glue), Google Colab, Jupyter, Kubernetes"
            },
            {
              title: "Libraries & Frameworks",
              description: "XGBoost, Prophet, scikit-learn, PyTorch, pandas, NumPy"
            },
            {
              title: "Data Visualization",
              description: "Tableau, Matplotlib, Seaborn, Plotly"
            },
            {
              title: "Database Management",
              description: "SQL, MongoDB"
            },
            {
              title: "Version Control",
              description: "Git, GitHub"
            },
            {
              title: "Foreign Languages",
              description: "Mandarin Chinese (HSK 3.5)"
            },
            {
              title: "Typesetting",
              description: "LaTeX"
            }
]}
        />
      <!-- Download Resume Button -->
      <div class="mt-12 text-center">
        <a
          href="/resume.pdf"
          target="_blank"
          class="inline-block px-8 py-4 bg-gruvbox-bg2 hover:bg-gruvbox-bg3 rounded-lg transition-colors text-xl text-gruvbox-fg"
        >
          Download Full Resume
        </a>
      </div>
    </div>
  </main>

  <Footer class="w-full" />

</Layout>
